{
    "app-id": "eleven.junichi2.Tsukushi",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "tsukushi",
    "modules": [
        {
            "name": "tsukushi",
            "buildsystem": "simple",
            "build-commands": [
                "install -D tsukushi /app/bin/tsukushi",
                "install -D tsukushi.kv /app/bin/tsukushi.kv",
                "install -d -D resources /app/bin/resources"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "./dist/tsukushi"
                },
                {
                    "type": "file",
                    "path": "./dist/tsukushi.kv"
                },
                {
                    "type": "dir",
                    "path": "./dist/resources"
                }
            ]
        }
    ]
}